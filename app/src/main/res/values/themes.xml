<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Split" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/background_primary</item>
        <item name="colorPrimaryVariant">@color/background_primary_variant</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/background_secondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="focusedColor">@color/light_blue_400</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColor">@color/black</item>

        <item name="android:buttonStyle">@style/AppButtonStyle</item>
    </style>

    <style name="Theme.Split.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Split.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.Split.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Dialog theme -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Button -->
    <style name="AppButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">?attr/colorSecondary</item>
    </style>

</resources>