<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Split.ImageButton">
        <item name="android:padding">3dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="Theme.Split.ImageButton.Middle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="Theme.Split.Card">
        <item name="android:background">@drawable/sh_round_rectangle</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="Theme.Split.MainMenuGridItem">
        <item name="android:background">@drawable/sh_round_rectangle</item>

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:gravity">fill</item>

        <item name="android:textSize">12sp</item>
    </style>
    <style name="Theme.Split.TextViewDefault">
        <item name="android:text">@string/blank</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
</resources>