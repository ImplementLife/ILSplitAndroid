<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Split" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/background_primary_night</item>
        <item name="colorPrimaryVariant">@color/background_primary_variant_night</item>
        <item name="colorOnPrimary">#EAEAEA</item>

        <item name="colorSecondary">@color/background_secondary_night</item>
        <item name="colorSecondaryVariant">@color/background_secondary_variant_night</item>
        <item name="colorOnSecondary">#EAEAEA</item>

        <item name="focusedColor">@color/light_blue_400</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:textColor">#EAEAEA</item>

        <item name="android:buttonStyle">@style/AppButtonStyle</item>
    </style>

    <!-- Dialog theme -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/background_primary</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/background_primary</item>
    </style>

    <!-- Button -->
    <style name="AppButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">?attr/colorSecondary</item>
    </style>
</resources>