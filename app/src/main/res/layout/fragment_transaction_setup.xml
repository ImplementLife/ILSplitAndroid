<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.TransactionSetupFragment"
>
    <EditText
            android:id="@+id/field_sum"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:inputType="numberDecimal|numberSigned"
            android:gravity="center"
            android:ems="10"
            android:hint="Sum"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/field_dscr"
            android:layout_marginTop="8dp"/>
    <EditText
            android:id="@+id/field_dscr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="top|start"
            android:scrollbars="vertical"
            android:minLines="1"
            android:maxLines="5"
            android:ems="10"
            android:hint="Description"
            app:layout_constraintTop_toBottomOf="@+id/group_btn_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"/>
    <GridView
            android:id="@+id/group_btn_date"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:numColumns="3"
            android:horizontalSpacing="10dp"
            android:layout_marginTop="24dp"/>
    <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/pager_from"
            android:layout_width="0dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/label_1"
            android:layout_marginTop="8dp"/>
    <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/pager_to"
            android:layout_width="0dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/label_2"
            android:layout_marginTop="8dp"/>
    <Button
            android:id="@+id/btn_create"
            android:text="Create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:id="@+id/label_1"
            android:text="From"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/field_sum"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"/>
    <TextView
            android:id="@+id/label_2"
            android:text="To"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/pager_from"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="8dp"/>
    <Button
            android:id="@+id/btn_negate"
            android:text="-"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/field_dscr"
            app:layout_constraintStart_toEndOf="@+id/field_sum"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"/>
    <ImageButton
            android:id="@+id/btn_clear_dscr"
            style="@style/Theme.Split.ImageButton.Small"
            android:src="@drawable/ic_svg_eraser"
            app:backgroundTint="@color/alpha"
            app:layout_constraintEnd_toEndOf="@+id/field_dscr"
            app:layout_constraintBottom_toBottomOf="@+id/field_dscr"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>